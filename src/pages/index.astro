---
import Layout from '../layouts/Layout.astro';
import { Building, MapPinHouse, Mail, Phone, ScrollText } from 'lucide-astro';
---

<Layout title="InvestREA, LLC">
	<main>
		<div class="flex items-center justify-center h-screen">
			<div class="flex flex-col items-center w-full m-8 md:m-0 p-8 md:w-1/3 rounded-xl bg-gray-50 border border-gray-300">
			<div class="flex flex-row items-center">
				<MapPinHouse class="size-8 md:size-12" />
				<span class="ml-2 text-2xl md:text-4xl font-black">InvestREA</span>
			</div>
			<div class="mt-4">
				<p class="text-justify">
					InvestREA, LLC is a Florida real estate brokerage that represents and advises high-net-worth individuals, family offices, and institutional investors in residential, industrial, and commercial real estate transactions in the "Sunshine State."
				</p>
				<div class="mt-4">
					<div class="flex flex-row items-start">
						<Building class="size-4 mr-2 mt-1" />
						<p>
							20 North Orange Avenue<br />
							Suite 1100<br/>
							Orlando, FL 32801
						</p>
					</div>
				</div>
				<div class="mt-4">
					<div class="flex flex-row items-center">
						<Phone class="size-4 mr-2" />
						<span>+1 689 302 IREA (4732)</span>
					</div>
				</div>
				<div class="mt-4">
					<div class="flex flex-row items-center">
						<Mail class="size-4 mr-2" />
						<span>
							<a
								href="https://mailhide.io/e/7HMRDK3h"
								onclick="popup=window.open('https://mailhide.io/e/7HMRDK3h','mailhidepopup','width=580,height=635'); return false;"
								class="underline hover:no-underline"
							>
								Reveal Email Address
							</a>
						</span>
					</div>
				</div>
				<div class="mt-4">
					<div class="flex flex-row items-center">
						<ScrollText class="size-4 mr-2" />
						<span>FL License #CQ1071817</span>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>
